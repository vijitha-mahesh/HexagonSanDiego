@page

@using HexagonSanDiego.Models
@model HexagonSanDiego.Pages.AdminPages.HomePageModel;

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/library/lib/jquery/dist/jquery.js"></script>
    <script src="~/library/js/ckeditor/ckeditor.js"></script>
    <link href="~/library/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>



<div class="container">


    <h1> <button class="btn" onclick="history.back()"> <i class="bi bi-arrow-left fa-1000px"></i></button> Edit Home</h1>
    <form method="post">

        <div class="form-group">
            <label for="formGroupExampleInput">Slider Images</label>
            <input name="sliderImage" class="form-control " type="file" accept="image/*" asp-for="sliderImage"/>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Slider Text</label>
            <input asp-for="homePageDataModel.SliderText" type="text" class="form-control">
        </div>
@*        <div class="form-group">
            <label for="formGroupExampleInput2">Welcome to Text</label>
            <input asp-for="homePageDataModel.WelcometoText" type="text" class="form-control">
        </div>*@

        <div class="form-group">
             <label for="formGroupExampleInput2">Welcome to Text</label>
            <textarea asp-for="homePageDataModel.WelcometoText" id="WelcometoText" class="ckeditor" name="WelcometoText" rows="200"></textarea>
        </div>


        <div class="form-group">
            <label for="formGroupExampleInput2">Welcome to Image</label>
            <input name="welcomeImage" class="form-control " type="file" accept="image/*" asp-for="welcomeImage"/>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Photogallery Text</label>
            <input asp-for="homePageDataModel.PhotogalleryText" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Photogallery Image</label>
            <input name="galleryImage" class="form-control " type="file" accept="image/*" asp-for="galleryImage"/>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Amenities Text</label>
            <input asp-for="homePageDataModel.AmenitiesText" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Community Text</label>
            <input asp-for="homePageDataModel.CommunityText" type="text" class="form-control">
        </div>


        <div class="form-group">
            <label for="formGroupExampleInput2">Footer Texts</label>
            <input asp-for="homePageDataModel.FooterText" type="text" class="form-control">
        </div>

        <h1>Social Links</h1>
        <div class="form-group">
            <label for="formGroupExampleInput2">Facebook</label>
            <input asp-for="homePageDataModel.FacebookLink" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Instagram</label>
            <input asp-for="homePageDataModel.InstergramLink" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Yelp</label>
            <input asp-for="homePageDataModel.YellpLink" type="text" class="form-control">
        </div>

        <!-- Submit button -->
        <div class="justify-content-center w-50 container">
            <button type="submit" class="btn btn-primary btn-block d-flex justify-content-center">Submit Changes</button>
        </div>
    </form>
</div>


<script>

    const message = document.getElementById('WelcometoText');

