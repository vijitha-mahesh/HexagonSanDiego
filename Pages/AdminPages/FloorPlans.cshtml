@page
@using HexagonSanDiego.Dtos.FloorPlanDtos
@model HexagonSanDiego.Pages.AdminPages.FloorPlansModel
@{
    ViewData["sucessMessage"] = null;
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

@if (ViewData["sucessMessage"] != null)  
    {  
        <div class="alert alert-primary" role="alert">
 Adding Success
</div>
    }  

<div class="container mt-3">
    <div class="row">
        <h1> <button class="btn" onclick="history.back()"><i class="bi bi-arrow-left fa-1000px"></i> </button> Floor Plans</h1>
    </div>

    <div class="d-flex justify-content-center mb-3">
        <div class="btn-group-vertical">
            <button type="button" class="btn btn-primary mb-4" id="btnAllPlans" style="display:none" onclick="AllFloorPlans()">All Floor Plans</button>
            <button type="button" class="btn btn-primary mb-4" id="btnAddPlan" onclick="addFloorPlan()">Add new Floor Plan</button>
        </div>
    </div>
</div>


<div class=" container" id="tableAllPlans">
    <table class="table">
        <thead class="bg-primary">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Bed</th>
                <th scope="col">Bath</th>
                <th scope="col">SqFeet</th>
                <th scope="col">Rent</th>
                <th scope="col">Deposit</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.allFloorPlans)
            {
            <tr>
                <th scope="row">@item.Name</th>
                <td>@item.Category</td>
                <td>@item.Bed</td>
                <td>@item.Bath</td>
                <td>@item.SqFeet</td>
                <td>@item.Rent</td>
                <td>@item.Deposit</td>

                <td><button class="btn btn-warning w-100">Edit</button></td>
                <td><button class="btn btn-danger w-75">Delete</button></td>
            </tr>
            }
        </tbody>
    </table>
</div>

<div class='create-floor-plan w-50 container' style="display:none" id="addFloorPlan">
    <div class="form-title p-4">
        <h4 class="text-center my-0 ">New Floor Plan</h4>
    </div>


    <form method="post">

        <div class="form-group row d-flex justify-content-center">
            
            <label class="col-sm-2 col-form-label ">
                Category
            </label>
            <div class="col-sm-6">
                <select class="form-select form-control form-control-sm" aria-label="Default select example" asp-for="addFloorPlanDto.Category">
                   <option value="Studio"> Studio</option>
                    <option value="1 Bed"> 1 Bed</option>
                    <option value="2 Bed"> 2 Bed </option>
                </select>
            </div>
        </div>


        <div class="form-group row d-flex justify-content-center">
            <label class="col-sm-2 col-form-label">
                Name
            </label>
            <div class="col-sm-6">
                <input asp-for="addFloorPlanDto.Name" type="text" id="form6Example1" class="form-control" />
            </div>
        </div>
        <div class="form-group row d-flex justify-content-center">
            <label class="col-sm-2 col-form-label">
                Bed
            </label>
            <div class="col-sm-6">
                <input asp-for="addFloorPlanDto.Bed" type="text" id="form6Example1" class="form-control" />
            </div>
        </div>
        <div class="form-group row d-flex justify-content-center">
            <label class="col-sm-2 col-form-label">
                Bath
            </label>
            <div class="col-sm-6">
                <input asp-for="addFloorPlanDto.Bath" type="text" id="form6Example1" class="form-control" />
            </div>
        </div>
        <div class="form-group row d-flex justify-content-center">
            <label class="col-sm-2 col-form-label">
                Sq. Ft.
            </label>
            <div class="col-sm-6">
                <input asp-for="addFloorPlanDto.SqFeet" type="text" id="form6Example1" class="form-control" />
            </div>
        </div>
        <div class="form-group row d-flex justify-content-center">
            <label class="col-sm-2 col-form-label">
                Rent
            </label>
            <div class="col-sm-6 d-flex justify-content-center">
                <input asp-for="addFloorPlanDto.Rent" type="text" id="form6Example1" class="form-control" />
            </div>
        </div>
        <div class="form-group row d-flex justify-content-center">
            <label class="col-sm-2 col-form-label">
                Deposit
            </label>
            <div class="col-sm-6 d-flex justify-content-center">
                <input asp-for="addFloorPlanDto.Deposit" type="text" id="form6Example1" class="form-control" />
            </div>
        </div>

        <!-- Submit button -->
        <div class="justify-content-center w-50 container">
            <button type="submit" class="btn btn-primary btn-block d-flex justify-content-center">Create Floor Plan</button>
        </div>

    </form>

</div>

<script>
    function addFloorPlan() 
    {
      document.getElementById("addFloorPlan").style.display = "block";
      document.getElementById("btnAllPlans").style.display = "block";
      document.getElementById("btnAddPlan").style.display = "none";
        document.getElementById("tableAllPlans").style.display = "none";
    }

    function AllFloorPlans() {
      document.getElementById("addFloorPlan").style.display = "none";
      document.getElementById("tableAllPlans").style.display = "block";
      document.getElementById("btnAllPlans").style.display = "none";
      document.getElementById("btnAddPlan").style.display = "block";
    }
</script>