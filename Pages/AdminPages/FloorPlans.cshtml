<div class='create-floor-plan w-50 container' style="display:none" id="addFloorPlan">
    <div class="form-title p-4">
            <h4 class="text-center my-0 ">New Floor Plan</h4>
    </div>
    <form>
        <div class="form-group row d-flex justify-content-center">
      <label class="col-sm-2 col-form-label " for="form6Example1">
          Category
      </label>
      <div class="col-sm-6">       
        <select class="form-control form-control-sm" name="Select Category"> 
            <option value="studio"> Studio</option>
            <option value="one-bed"> 1 Bed</option>
            <option value="two-bed"> 2 Bed </option>
        </select>
      </div>
  </div>
  <div class="form-group row d-flex justify-content-center">
      <label class="col-sm-2 col-form-label" for="form6Example1">
          Bed
      </label>
      <div class="col-sm-6">       
        <input type="text" id="form6Example1" class="form-control" />
      </div>
  </div>
  <div class="form-group row d-flex justify-content-center">
      <label class="col-sm-2 col-form-label" for="form6Example1">
          Bath
      </label>
      <div class="col-sm-6">       
        <input type="text" id="form6Example1" class="form-control" />
      </div>
  </div>
  <div class="form-group row d-flex justify-content-center">
      <label class="col-sm-2 col-form-label" for="form6Example1">
          Sq. Ft.
      </label>
      <div class="col-sm-6">       
