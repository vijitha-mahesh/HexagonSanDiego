      <div class="col-sm-6 d-flex justify-content-center">       
        <input type="text" id="form6Example1" class="form-control" />
      </div>
  </div>
  <div class="form-group row d-flex justify-content-center">
      <label class="col-sm-2 col-form-label" for="form6Example1">
          Deposit
      </label>
      <div class="col-sm-6 d-flex justify-content-center">       
        <input type="text" id="form6Example1" class="form-control" />
      </div>
  </div>

  <!-- Submit button -->
  <div class="justify-content-center w-50 container">
        <button type="submit" class="btn btn-primary btn-block d-flex justify-content-center">Create Floor Plan</button>
  </div>

</form>

</div>

<script>
function addFloorPlan() {
  document.getElementById("addFloorPlan").style.display = "block";
  document.getElementById("btnAllPlans").style.display = "block";
  document.getElementById("btnAddPlan").style.display = "none";
    document.getElementById("tableAllPlans").style.display = "none";
}

function AllFloorPlans() {
  document.getElementById("addFloorPlan").style.display = "none";
  document.getElementById("tableAllPlans").style.display = "block";
  document.getElementById("btnAllPlans").style.display = "none";
  document.getElementById("btnAddPlan").style.display = "block";
}
</script>