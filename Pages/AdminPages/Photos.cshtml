@page
@model HexagonSanDiego.Pages.AdminPages.PhotosModel
@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-3">
        <div class="row">
            <h1>  <button class="btn" onclick="history.back()"><i class="bi bi-arrow-left fa-1000px"></i> </button>Admin Panel</h1>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <div class="btn-group-vertical">

                <form method="post" enctype="multipart/form-data">
                    <input name="ifile" class="form-control mb-4" type="file" accept="image/*" asp-for="ifile" />
                    <input type="submit" class="mb-4  btn" value="Add Image" />
                    <h4> @ViewData["Message"] </h4>
                </form>
            </div>
        </div>
    </div>

</body>
</html>