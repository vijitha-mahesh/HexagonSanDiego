                                <textarea id="TextArea1" rows="4" cols="20" class="form-control" placeholder="Message"></textarea>
                            </div>
                            <div class="col-12 text-center mt-3">
                                <button type="button" class="btn btn-gold px-5 rounded-0 btn-lg">SEND MY MESSAGE</button>
